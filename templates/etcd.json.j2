{
"apiVersion": "v1",
"kind": "Pod",
"metadata": {
  "name":"etcd-server",
  "namespace": "kube-system",
  "annotations": {
    "scheduler.alpha.kubernetes.io/critical-pod": "",
    "seccomp.security.alpha.kubernetes.io/pod": "docker/default"
  }
},
"spec":{
"hostNetwork": true,
"containers":[
    {
    "name": "etcd-container",
    "image": "{{ etcd_image_name }}:{{ etcd_image_version }}",
    "resources": {
      "requests": {
        "cpu": "{{ etcd_cpulimit }}"
      }
    },
    "command": [
              "/bin/sh",
              "-c",
              "set -a; source /etc/etcd/etcd.conf; set +a; if [ -e /usr/local/bin/migrate-if-needed.sh ]; then /usr/local/bin/migrate-if-needed.sh 1>>/var/log/etcd.log 2>&1; fi; exec /usr/local/bin/etcd --name $ETCD_NAME --data-dir $ETCD_DATA_DIR --listen-client-urls $ETCD_LISTEN_CLIENT_URLS 1>>/var/log/etcd.log 2>&1"
            ],
    "livenessProbe": {
      "httpGet": {
        "host": "{{ etcd_client_local_ip }}",
        "port": 2379,
        "path": "/health"
      },
      "initialDelaySeconds": 5,
      "timeoutSeconds": 15
    },
    "ports": [
      { "name": "serverport",
        "containerPort": 2380,
        "hostPort": 2380
      },
      { "name": "clientport",
        "containerPort": 2379,
        "hostPort": 2379
      }
        ],
    "volumeMounts": [
      { "name": "varlibetcd",
        "mountPath": "/var/lib/etcd",
        "readOnly": false
      },
      { "name": "etcetcd",
        "mountPath": "/etc/etcd",
        "readOnly": true
      },
      { "name": "varlogetcd",
        "mountPath": "/var/log/etcd.log",
        "readOnly": false
      }
    ]
    }
],
"volumes":[
  { "name": "varlibetcd",
    "hostPath": {
        "path": "/var/lib/etcd"}
  },
  { "name": "etcetcd",
    "hostPath": {
        "path": "/etc/etcd"}
  },
  { "name": "varlogetcd",
    "hostPath": {
        "path": "/var/log/etcd.log",
        "type": "FileOrCreate"}
  }
]
}}
